---
title: LD-map
js: map.js
css: map.css
body: dark-bg
---
<style>

.floor {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 35%;
    background-color: #4E5760;
}

.floor-hidden {
    bottom: -35%;
}

.floor-wrapper {
    position: absolute;
    left: 0; top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.01);
    overflow-x: scroll;
    -webkit-overflow-scrolling: touch;
}

.door-frame {
    position: absolute;
    background-color: #191B1D;
}

.door {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: #7F8B96;
    z-index: 1;
    text-align: center;
    font-weight: bold;
    transform-origin: 0 0;
    transition-duration: 700ms;
}

.door.open {
    transform: rotateY(180deg);
}

.door-info {
    position: absolute;
}

.door-info-content {
    position: relative;
    padding-top: 8px;
    text-align: center;
    color: #FAFAFA;
    font-weight: bold;
    opacity: 0;
}

.door-info-content hr {
    height: 0px;
    border: 0px;
    border-top: 1px solid rgba(250, 250, 250, 0.3);
    margin: 4px 8px 4px 8px;
}

.door-info-content button {
    border: 0px;
    margin-top: 8px;
    padding: 5px 15px 5px 15px;
    background-color: #00C634;
    color: #013A10;
    font-weight: bold;
    font-size: 1.3em;
    border-radius: 20px;
    outline: 0px;
}

/* anims */

@-webkit-keyframes floor-appear {
    0% { bottom: -35%; }
    100% { bottom: 0; }
}

@-webkit-keyframes floor-disappear {
    0% { bottom: 0; }
    100% { bottom: -35%; }
}

@-webkit-keyframes door-appear {
    0% { opacity: 0 }
    100% { opacity: 1 }
}

@-webkit-keyframes door-disappear {
    0% { opacity: 1 }
    100% { opacity: 0 }
}

</style>

<script>
var ms;

$(function () {
    ms = new scene.map.MapScene()
    ms.play();
});
</script>



<div class="floor floor-hidden"></div>

<div class="floor-wrapper"></div>









<img class="life-button -menu-hidden" src="images/life-button.svg" />

<img class="menu-button menu-hidden" src="images/menu-button.svg" />

<menus id="map-menu">
  <menu src="images/back-button.svg"
    onclick="ms.fadeOut().then(function () { history.back(); });"></menu>
  <menu src="images/reset-button.svg"
    onclick="ms.fadeOut().then(function () { location.reload(); });"></menu>
</menus>
